{
  "family": "custom-nginx-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "nginx-container",
      "image": "${IMAGE_NAME}",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${AWS_EXECUTION_TASK_ROLE}",
  "taskRoleArn": "${AWS_EXECUTION_TASK_ROLE}"
}
